;---------------------------------------;;              “≈¡ƒÕ≈;; LOAD AN IMAGE OF SIZE 320*64;†;†LOAD THE IMAGE AT FOLLOWING POSITION:;;        $2000+(320*TOPPOS);; PRESS _SHIFT+L TO LOAD IMG; PRESS _I TO CLEAN UP MEMORY;;---------------------------------------TOPPOS   = 8IMGPOS   = TOPPOS*8*40CHRPOS   = TOPPOS*40         *= $1000         SEI         LDA $4710 ;BACKGROUND DATA         STA $D020 ;BORDER SCREEN COLOR         STA $D021 ;BGRND  SCREEN COLOR         LDX #$00         LDA $DD00         AND #$FC         ORA #$03         STA $DD00         LDA #$3B         STA $D011 ; MULTICOLOR         LDA $D016         ORA #$10  ; MULTICOLOR         STA $D016         LDA #$18         STA $D018LOADIMAGE              ; 320 * 64 HEIGHT         LDA $2A00+IMGPOS,X         STA $0400+CHRPOS,X         LDA $2A40+IMGPOS,X         STA $0440+CHRPOS,X         LDA $2B40+IMGPOS,X         STA $D800+CHRPOS,X         LDA $2B80+IMGPOS,X         STA $D840+CHRPOS,X         INX         BNE LOADIMAGEREADKEY         LDA #50+(8*TOPPOS)         CMP $D012         BNE *-3                   ; BROWN         LDA #$3B  ; IMAGE MODE         STA $D011         LDA #2         STA $D020         LDA #114+(8*TOPPOS)         CMP $D012         BNE *-3         LDA #$1B  ; WHITE         STA $D011 ; TEXT MODE         LDA #1         STA $D020         JSR $FFE4         BEQ READKEY         JMP $9000